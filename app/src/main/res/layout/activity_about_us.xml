<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.schedulecollegework.appmenu.AboutUs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/about_us_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="App developed by :"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/about_us_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JUNAID HASSAN"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/about_us_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="junaidhassan2211@gmail.com"
            android:textColor="#2196F3" />

        <TextView
            android:id="@+id/about_us_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Icons by :"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/about_us_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="https://icons8.com/"
            android:textColor="#2196F3" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
